{
  "compilerOptions": {
    "target": "ESNext",
    "module": "UMD",
    "moduleResolution": "node",
    "importHelpers": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "baseUrl": "./",
    "strict": true,
    "paths": {
      "@/*": ["src/render/*"],
      "@root/*": ["./*"]
    },
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src"
  ]
}
